{
  "version": 2,
  "functions": {
    "api/**/*.js": {
      "runtime": "edge"
    }
  },
  "routes": [
    {
      "src": "/(img|imagenes)/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable"
      }
    },
    {
      "src": "/api/products",
      "dest": "/api/products.js",
      "headers": {
        "Cache-Control": "public, max-age=60"
      }
    },
    {
      "src": "/api/whatsapp",
      "dest": "/api/whatsapp.js"
    },
    {
      "src": "/tienda-(?<store>[^/]+)/?$",
      "dest": "/tiendas/$store/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/tiendas/default/index.html"
    }
  ]
}
