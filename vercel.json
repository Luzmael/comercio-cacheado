{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/edge"
    },
    {
      "src": "tiendas/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/public/(products|gallery)/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable",
        "CDN-Cache-Control": "public, max-age=604800"
      }
    },
    {
      "src": "/api/products",
      "dest": "/api/products.js",
      "headers": {
        "Cache-Control": "public, max-age=60, stale-while-revalidate=300"
      }
    },
    {
      "src": "/api/whatsapp",
      "dest": "/api/whatsapp.js",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/tienda-(?<store>[^/]+)/?$",
      "dest": "/tiendas/$store/index.html",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/tiendas/default/index.html"
    }
  ]
}
