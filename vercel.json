{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/node"
    },
    {
      "src": "tiendas/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    // 1. Regla para archivos estáticos (máx caching)
    {
      "src": "/images/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable",
        "CDN-Cache-Control": "public, max-age=31536000, immutable",
        "Vercel-CDN-Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    // 2. API routes (caching corto)
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "headers": {
        "Cache-Control": "public, max-age=60, s-maxage=60",
        "CDN-Cache-Control": "public, max-age=60"
      }
    },
    // 3. Datos JSON (caching moderado)
    {
      "src": "/data/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=3600",
        "CDN-Cache-Control": "public, max-age=3600"
      }
    },
    // 4. Tiendas específicas (Edge caching)
    {
      "src": "/tiendas/(?<store>[^/]+)/?$",
      "dest": "/tiendas/$store/index.html",
      "headers": {
        "Cache-Control": "public, max-age=60",
        "CDN-Cache-Control": "public, max-age=60"
      }
    },
    // 5. Fallback para SPAs
    {
      "src": "/(.*)",
      "dest": "/tiendas/default/index.html",
      "headers": {
        "Cache-Control": "public, max-age=60"
      }
    }
  ],
  "env": {
    "ENABLE_EDGE": "1",
    "CACHE_TTL": "3600"
  }
}
