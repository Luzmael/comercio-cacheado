{
  "version": 2,
  "builds": [
    {
      "src": "api/products.js",
      "use": "@vercel/edge"
    },
    {
      "src": "api/whatsapp.js",
      "use": "@vercel/edge"
    },
    {
      "src": "tiendas/**/*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/public/(img|imagenes)/(.*\\.webp)",
      "headers": {
        "Cache-Control": "public, max-age=604800, immutable"
      }
    },
    {
      "src": "/api/products",
      "handler": "api/products.js",
      "headers": {
        "Cache-Control": "public, max-age=60"
      }
    },
    {
      "src": "/api/whatsapp",
      "handler": "api/whatsapp.js"
    },
    {
      "src": "/tienda-(.+)/?$",
      "destination": "/tiendas/$1/index.html"
    },
    {
      "src": "/(.*)",
      "destination": "/tiendas/default/index.html"
    }
  ]
}
